 <section class="wrapper">
  <!-- //market-->
  <div class="market-updates">
   <div class="col-md-3 market-update-gd">
    <div class="market-update-block clr-block-2">
     <div class="col-md-4 market-update-right">
      <i class="fa fa-truck"> </i>
    </div>
    <div class="col-md-8 market-update-left">
     <h4>Kalan Süt </h4>
     <h3><%=Sut.all.sum(:miktar)- Harcanansut.all.sum(:harcanan)%> Lt</h3>

   </div>
   <div class="clearfix"> </div>
 </div>

</div>
<div class="col-md-3 market-update-gd">
  <div class="market-update-block clr-block-1">
   <div class="col-md-4 market-update-right">
    <i class="fa fa-truck" ></i>
  </div>
  <div class="col-md-8 market-update-left">
   <h4>Günlük Süt </h4>
   <h3><%=Sut.where(:date => Date.today).sum(:miktar)%>  Lt</h3>

 </div>
 <div class="clearfix"> </div>
</div>
</div>
<div class="col-md-3 market-update-gd">
  <div class="market-update-block clr-block-3">
   <div class="col-md-4 market-update-right">
    <i class="fa fa-usd"></i>
  </div>
  <div class="col-md-8 market-update-left">
    <h4>Günlük Ciro</h4>
    <h3><%=Satilan.where(:date => Date.today).sum(:toplam_fiyat)%>  TL</h3>

  </div>
  <div class="clearfix"> </div>
</div>
</div>
<div class="col-md-3 market-update-gd">
  <div class="market-update-block clr-block-4">
   <div class="col-md-4 market-update-right">
    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
  </div>
  <div class="col-md-8 market-update-left">
    <h4>Toplam Ciro</h4>
    <h3><%=Satilan.all.sum(:toplam_fiyat)%> TL</h3>
    
  </div>
  <div class="clearfix"> </div>
</div>
</div>
<div class="clearfix"> </div>
</div>  

<div class="table-agile-info">
 <div class="panel panel-default">
  <div class="panel-heading">
    Eklenen Süt Kayıtları

  </div>
  <div>
    <table class="table" ui-jq="footable" ui-options='{
    "paging": {
    "enabled": true
  },
  "filtering": {
  "enabled": true
},
"sorting": {
"enabled": true
}}'>
<div class="container">

  <div class="center">
    <br>

    <%= form_tag suts_path, method: :get do %>
    <div class="row">
     <div class="col-md-3">
      <%=date_field_tag 'search[date_from]', @search.date_from, style: "width:100%" %><br><br>
    </div>
    <div class="col-md-3">
     <%=date_field_tag 'search[date_to]', @search.date_to , style: "width:100%" %><br><br>

   </div>
   <div class="col-md-3">
     <%= button_tag(type: 'submit', class: "btn btn-success") do %>
     <span class="glyphicon glyphicon-search" style= "color:white;"></span> Arama Yap
     <% end %>
     <%end%>


     <%= link_to 'Yeni Süt Kaydı', new_sut_path , class: "btn btn-primary " %><br><br>
   </div>
   <div class="col-md-3">
    <%= link_to "CSV", suts_path(format: "csv") %> |
    <%= link_to "Excel", suts_path(format: "xls") %>
  </div> 
</div>
<br>

<thead>
  <tr>
    <th data-breakpoints="xs">Süt Miktarı</th>
    <th>Tarih</th>

    <th colspan="3"></th>
  </tr>

</thead>
<tbody>
  <% @suts.each do |sut| %>
  <tr data-expanded="true">
    <td><%= sut.miktar %></td>
    <td><%= sut.date.strftime("%d-%m-%Y")%></td>
    
    
    <td>

     <%= link_to '', edit_sut_path(sut) , class:"btn btn-default fa fa-pencil"%> 
     <%= link_to '', sut, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-default fa fa-trash" %> 
   </td>
   
 </tr>
 <% end %>
</tbody>
</table>
</div>
</div>
</table>
</div>
</div>
</div>
</section>










