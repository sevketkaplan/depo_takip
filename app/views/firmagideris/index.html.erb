<div class="table-agile-info">
 <div class="panel panel-default">
  <div class="panel-heading">
    Üretilen Ürün Kayıtları

  </div>
  <div>
    <table class="table" ui-jq="footable" ui-options='{
    "paging": {
    "enabled": true
  },
  "filtering": {
  "enabled": true
},
"sorting": {
"enabled": true
}}'>
<div class="container">

  <div class="center">
    <br>

    <div class="col-md-4">
     <%=form_tag firmagideris_path, :method =>'get' do%>

     <%= date_field_tag :search, params[:search] %>

     <%= submit_tag "Arama Yap"%>

     <% end %>
   </div>
   <div class="col-md-4">

     <%= link_to 'Firma Gider Kayıt Formu', new_firmagideri_path , class: "btn btn-primary " %><br><br>
   </div>


 </div>
 <div class="col-md-4">
  <%= link_to "CSV", firmagideris_path(format: "csv") %> |
  <%= link_to "Excel", firmagideris_path(format: "xls") %>
</div> 


</div>
<br>
<thead>
  <tr>
    <th>Elektrik</th>
    <th>Su</th>
    <th>Doğalgaz</th>
    <th>Kira</th>
    <th>Vergi</th>
    <th>Yemek</th>
    <th>Tarih</th>

  </tr>
</thead>
<tbody>
  <% @firmagideris.each do |firmagideri| %>
  <tr data-expanded="true">
    <td><%= firmagideri.elektrik %> TL</td>
    <td><%= firmagideri.su %> TL</td>
    <td><%= firmagideri.dogalgaz %> TL</td>
    <td><%= firmagideri.kira %> TL</td>
    <td><%= firmagideri.vergi %> TL</td>
    <td><%= firmagideri.yemek %> TL</td>

    <td><%= firmagideri.created_at.strftime("%d-%m-%Y") %></td>

    <td> <%= link_to '', edit_firmagideri_path(firmagideri) , class:"btn btn-default fa fa-pencil"%></td>
    <td> <%= link_to '', firmagideri, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-default fa fa-trash" %></td>

  </tr>
  <% end %>
</tbody>
</table>
</div>
</div>
</table>
<%= paginate @firmagideris %>
</div>
