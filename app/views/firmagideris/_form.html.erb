  <section class="wrapper">
    <div class="form-w3layouts">
     <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <header class="panel-heading">
           Ürün Kayıt
           <span class="tools pull-right">
            <a class="fa fa-chevron-down" href="javascript:;"></a>
            <a class="fa fa-cog" href="javascript:;"></a>
            <a class="fa fa-times" href="javascript:;"></a>
          </span>
        </header>

        
        <%= form_with(model: firmagideri, local: true) do |form| %>
        <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %>
        </div>
        <% end %> <br> <br>
        <div class="panel-body">
         <form class="cmxform form-horizontal " id="commentForm" method="get" action="" novalidate="novalidate">


          <div class="form-group">
            <label for="urunadi" class="control-label col-lg-3">Firma Elektrik Gideri</label>
            <%= form.number_field :elektrik %>
          </div>

          <div class="form-group">
           <label for="cname" class="control-label col-lg-3">Firma Su Gideri</label>
           <%= form.number_field :su %>
         </div>

         <div class="form-group">
          <label for="cname" class="control-label col-lg-3">Firma Doğalgaz Ücreti</label>
          <%= form.number_field :dogalgaz %>
        </div>

        <div class="form-group">
          <label for="cname" class="control-label col-lg-3">Firmanın Yer Kirası(Varsa)</label>
          <%= form.number_field :kira %>
        </div>

        <div class="form-group">
          <label for="cname" class="control-label col-lg-3">İşletme Vergi Borcu(KDV vs.)</label>
          <%= form.number_field :vergi %>
        </div>

        <div class="form-group">
          <label for="cname" class="control-label col-lg-3">Çalışanların Yemek Ücretleri Toplamı</label>
          <%= form.number_field :yemek%>
        </div>

        <div class="actions">
          <%= form.submit "Kaydet", class: "btn btn-primary"%>
        </div>

      </form>
    </div>
  </section>
  <%end%>
</div>
</div>
</div>
</section>


