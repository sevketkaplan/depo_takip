<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<div class="reg-w3">
  <div class="w3layouts-main">
    <h2>Kayıt Formu</h2>

    <div class="field ggg">
      <%= f.label :Adı_Soyadı %><br/>
      <%= f.text_field :ad_soyad, class: "ggg"%>
    </div>
    <div class="field ggg">
      <%= f.label :Kullanıcı_Adı %><br/>
      <%= f.text_field :username, class: "ggg"%>
    </div>
    <div class="field ggg">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "ggg"%>
    </div>

    <div class="field ggg">
      <%= f.label :Şifre %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" ,class: "ggg"%>
    </div>

    <div class="field ggg">
      <%= f.label :Şifreyi_Tekrar_Giriniz %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" ,class: "ggg"%>
    </div>

    <div class="actions ggg">
      <%= f.submit "Kayıt Ol",class: "ggg" %>
    </div>
    <p>Zaten Hesabınız varsa<a href="<%=new_user_session_path%>">Giriş Sayfası</a></p>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
