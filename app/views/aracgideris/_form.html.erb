
<section class="wrapper">
  <div class="form-w3layouts">
   <div class="row">
    <div class="col-lg-12">
      <section class="panel">
        <header class="panel-heading">
         Ürün Kayıt
         <span class="tools pull-right">
          <a class="fa fa-chevron-down" href="javascript:;"></a>
          <a class="fa fa-cog" href="javascript:;"></a>
          <a class="fa fa-times" href="javascript:;"></a>
        </span>
      </header>

      
      <%= form_with(model: aracgideri, local: true) do |form| %>
      <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %>
      </div>
      <% end %> <br> <br>
      <div class="panel-body">
       <form class="cmxform form-horizontal " id="commentForm" method="get" action="" novalidate="novalidate">


        <div class="form-group">
          <label for="urunadi" class="control-label col-lg-3">Alınan Yakıt Ücreti</label>
          <%= form.number_field :yakit %>
        </div>

        <div class="form-group">
         <label for="cname" class="control-label col-lg-3">Motorlu Taşıt Vergisi</label>
         <%= form.number_field :mtv %>
       </div>

       <div class="form-group">
        <label for="cname" class="control-label col-lg-3">Araç Sigorta Ücreti</label>
        <%= form.number_field :sigorta %>
      </div>
         <div class="form-group">
        <label for="cname" class="control-label col-lg-3">Araç Bakım Ücreti</label>
        <%= form.number_field :bakim %>
      </div>

      <div class="form-group">
        <label for="cname" class="control-label col-lg-3">Araç Kasko Ücreti</label>
        <%= form.number_field :kasko %>
      </div>

      <div class="form-group">
        <label for="cname" class="control-label col-lg-3">Aracın Plakası</label>
        <%= form.collection_select :plaka,Arac.all,:plaka,:plaka %>
      </div>
      


      <div class="actions">
        <%= form.submit "Kaydet", class: "btn btn-primary"%>
      </div>

    </form>
  </div>
</section>
<%end%>
</div>
</div>
</div>
</section>


