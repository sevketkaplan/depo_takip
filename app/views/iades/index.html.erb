<div class="table-agile-info">
 <div class="panel panel-default">
  <div class="panel-heading">
    Yapılan İade Kayıtları

  </div>
  <div>
    <table class="table" ui-jq="footable" ui-options='{
    "paging": {
    "enabled": true
  },
  "filtering": {
  "enabled": true
},
"sorting": {
"enabled": true
}}'>
<div class="container">

  <div class="center">
    <br>
    
    <div class="col-md-4">
     <%=form_tag iades_path, :method =>'get' do%>

     <%= date_field_tag :search, params[:search] %>
     
     <%= submit_tag "Arama Yap"%>

     <% end %>
   </div>
   <div class="col-md-2">
    <%= link_to 'Yeni İade Formu', new_iade_path , class: "btn btn-primary " %><br><br>
   </div>
 </div>
 <div class="col-md-3">
  <%= link_to "CSV", iades_path(format: "csv") %> |
  <%= link_to "Excel", iades_path(format: "xls") %>
</div>
<div class="col-md-3">
 <%=link_to "Detaylı Listeleme", new_isearch_path%>
</div> 
</div>

</div>
<thead>
  <tr>
    <th data-breakpoints="xs">Teslim yeri</th>
    <th>Adi</th>
    <th>Paket tipi</th>
    <th>Adet</th>
    <th data-breakpoints="xs">Birim fiyat</th>

    <th data-breakpoints="xs sm md" data-title="DOB">Toplam fiyat</th>
    <th>İadeyi Alan Kişi</th>
    <th>İade Tarihi</th>
    <th colspan="3"></th>
  </tr>

</thead>
<tbody>
  <% @iades.each do |iade| %>
  <tr data-expanded="true">
    <td><%= iade.teslim_yeri %></td>
    <td><%= iade.adi %></td>
    <td><%= iade.paket_tipi %></td>
    <td><%= iade.adet %></td>
    <td><%= iade.birim_fiyat%> TL</td>
    <td><%= iade.toplam_fiyat%></td>
    <td><%= iade.dagitici %></td>
    <td><%= iade.date.strftime("%d-%m-%Y") %></td>

    <td> <%= link_to '', edit_iade_path(iade) , class:"btn btn-default fa fa-pencil"%></td>
    <td> <%= link_to '', iade, method: :delete, data: { confirm: 'Emin misiniz?' },class:"btn btn-default fa fa-trash" %></td>
  </tr>

  <% end %>
</tbody>
</table>
</div>
</div>
</table>

</div>
</div>
</div>
